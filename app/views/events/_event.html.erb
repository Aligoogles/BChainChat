<div class="container p-2 bg-light border" id="<%= dom_id event %>">

  <% if event.image?%>
    <div >
      <img src= "<%= event.image  %>" style="height: 19vh; width: 24vh; margin: 2% 0%;" >
    </div>
  <% end %>

  <p>
    <strong>Title:</strong>
    <%= event.title %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= event.date %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= event.time %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= event.location %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= event.description %>
  </p>

  <p>
    <strong>Limit:</strong>
    <%= event.limit %>
  </p>

  <p>
    <strong>Attendees:</strong>
    <%= event.attendees %>
  </p>

  <p>
    <strong>Posted by:</strong>
    <%= event.user.first_name %>
  </p>

  <%= button_to uprsvp_label(event, current_user), rsvp_event_path(event, type: :uprsvp), method: :patch, style: uprsvp_label_styles(event, current_user) %>
  <br>
  <strong>Attendees: <%= event.cached_votes_total %> </strong>
  
  <hr />
</div>
